generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     String  
}

model Patient {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  diseases         String
  allergies        String
  roomNumber       String
  bedNumber        String
  floorNumber      Int
  age              Int
  gender           String
  contactInfo      String
  emergencyContact String
}
